                android:value="br.edu.ucpel.activity.MenuActivity" />
        </activity>
        <activity
            android:name="br.edu.ucpel.activity.MatriculaActivity"
            android:label="@string/title_activity_matricula"
            android:parentActivityName="br.edu.ucpel.activity.MenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.edu.ucpel.activity.MenuActivity" />
        </activity>
        <activity
            android:name="br.edu.ucpel.activity.AvaliacaoActivity"
            android:label="@string/title_activity_avaliacao"
            android:parentActivityName="br.edu.ucpel.activity.MenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.edu.ucpel.activity.MenuActivity" />
        </activity>

    </application>

</manifest>
