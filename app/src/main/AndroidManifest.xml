        <activity
            android:name="br.edu.ucpel.activity.EscolhaMatriculaActivity"
            android:label="@string/title_activity_matricula" >
        </activity>
        <activity
            android:name="br.edu.ucpel.activity.NotasActivity"
            android:label="@string/title_activity_notas"
            android:parentActivityName="br.edu.ucpel.activity.MenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.edu.ucpel.activity.MenuActivity" />
        </activity>
        <activity
            android:name="br.edu.ucpel.activity.HorariosActivity"
            android:label="@string/title_activity_horarios"
